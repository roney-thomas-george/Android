<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="buttonstyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">#e71313</item>

        <item name="android:textSize">15sp</item>
        <item name="android:shape" >oval</item>

        <item name="android:textStyle">bold</item>
        <item name="android:topLeftRadius">500dp</item>
        <item name="android:topRightRadius">500dp</item>
        <item name="android:bottomRightRadius">500dp</item>
        <item name="android:bottomLeftRadius">500dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
